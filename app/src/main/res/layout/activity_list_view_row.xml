<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gameObjectPicture"
        android:layout_width="@dimen/game_preview_list"
        android:layout_height="@dimen/game_preview_list"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/error_loading" />

    <TextView
        android:id="@+id/gameObjectName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginLeft="50dp"
        android:text="@string/intializing"
        app:layout_constraintBottom_toBottomOf="@+id/gameObjectPicture"
        app:layout_constraintStart_toEndOf="@+id/gameObjectPicture"
        app:layout_constraintTop_toTopOf="@+id/gameObjectPicture" />

</androidx.constraintlayout.widget.ConstraintLayout>