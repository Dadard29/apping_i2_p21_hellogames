<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/list_games"
        android:layout_width="@dimen/main_square"
        android:layout_height="@dimen/main_square"
        android:background="#03A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/game_1"
            android:layout_width="@dimen/game_preview_square"
            android:layout_height="@dimen/game_preview_square"
            android:background="#FFFFFF"
            android:contentDescription="@string/game_preview_description"
            android:tag="game_1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/background_light" />

        <ImageView
            android:id="@+id/game_2"
            android:layout_width="@dimen/game_preview_square"
            android:layout_height="@dimen/game_preview_square"
            android:background="#FFFFFF"
            android:contentDescription="@string/game_preview_description"
            android:tag="game_2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@android:color/background_light" />

        <ImageView
            android:id="@+id/game_3"
            android:layout_width="@dimen/game_preview_square"
            android:layout_height="@dimen/game_preview_square"
            android:background="#FFFFFF"
            android:contentDescription="@string/game_preview_description"
            android:tag="game_3"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:srcCompat="@android:color/background_light" />

        <ImageView
            android:id="@+id/game_0"
            android:layout_width="@dimen/game_preview_square"
            android:layout_height="@dimen/game_preview_square"
            android:background="#FFFFFF"
            android:contentDescription="@string/game_preview_description"
            android:tag="game_0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:color/background_light" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>